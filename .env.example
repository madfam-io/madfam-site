# =============================================================================
# MADFAM-SITE - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# See PORT_REGISTRY.md in solarpunk-foundry for port assignments
# -----------------------------------------------------------------------------
NODE_ENV=development
WEB_PORT=3000
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# JANUA AUTHENTICATION
# -----------------------------------------------------------------------------
JANUA_ENABLED=true
JANUA_API_URL=http://localhost:8000
JANUA_JWT_SECRET=dev-shared-janua-secret-32chars!!

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-change-in-production

# -----------------------------------------------------------------------------
# MADFAM ECOSYSTEM CONNECTIONS
# See PORT_REGISTRY.md for port assignments
# -----------------------------------------------------------------------------
FORGESIGHT_API_URL=http://localhost:4040
COTIZA_API_URL=http://localhost:4030

# -----------------------------------------------------------------------------
# CONTENT MANAGEMENT (Optional)
# -----------------------------------------------------------------------------
# Sanity CMS
SANITY_PROJECT_ID=
SANITY_DATASET=production
SANITY_API_VERSION=2024-01-01

# -----------------------------------------------------------------------------
# ANALYTICS & MONITORING (Optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
SENTRY_DSN=

# -----------------------------------------------------------------------------
# EMAIL (Janua centralized Resend integration)
# -----------------------------------------------------------------------------
# Direct Resend (fallback for local development)
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_EMAIL=hello@madfam.io

# Janua Email Service (preferred - centralized)
JANUA_INTERNAL_API_KEY=your-janua-internal-api-key

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_BLOG=true
ENABLE_CAREERS=true
ENABLE_CONTACT_FORM=true
