{
  "name": "madfam-corporate",
  "version": "0.1.0",
  "private": true,
  "description": "MADFAM Corporate Website - AI-driven consultancy and product studio",
  "author": "MADFAM <hello@madfam.io>",
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "pnpm --filter @madfam/web dev",
    "build": "turbo build",
    "build:web": "pnpm --filter @madfam/web build",
    "build:production": "turbo build --env-mode=production",
    "start:web": "pnpm --filter @madfam/web start",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "typecheck": "turbo typecheck",
    "docker:dev": "docker-compose up web-dev",
    "docker:prod": "docker-compose up web",
    "docker:build": "docker-compose build",
    "prepare": "husky",
    "validate:translations": "node scripts/validate-translations.js",
    "find:missing-translations": "node scripts/find-missing-translations.js",
    "check:translations": "npm run validate:translations && npm run find:missing-translations"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@types/node": "^24.10.1",
    "audit-ci": "^7.1.0",
    "axe-core": "4.11.0",
    "bundlewatch": "^0.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "next": "^15.5.6",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1"
  },
  "engines": {
    "node": "22.x",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.1",
  "lint-staged": {
    "apps/web/**/*.{ts,tsx,js,jsx}": [
      "cd apps/web && pnpm lint --fix",
      "cd apps/web && pnpm typecheck"
    ],
    "apps/cms/**/*.{ts,js}": [
      "cd apps/cms && npm run lint"
    ],
    "**/*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "express@<4.20.0": ">=4.20.0",
      "form-data": ">=4.0.4",
      "@types/node-fetch>form-data": ">=4.0.4",
      "on-headers@<1.1.0": ">=1.1.0",
      "body-parser@<1.20.3": ">=1.20.3",
      "next@>=14.0.0 <14.2.10": ">=14.2.10",
      "send@<0.19.0": ">=0.19.0",
      "serve-static@<1.16.0": ">=1.16.0",
      "next@>=9.5.5 <14.2.15": ">=14.2.15",
      "next@>=14.0.0 <14.2.21": ">=14.2.21",
      "path-to-regexp@<0.1.10": ">=0.1.10",
      "esbuild@<=0.24.2": ">=0.25.0",
      "next@>=14.0.0 <14.2.25": ">=14.2.25",
      "cookie@<0.7.0": ">=0.7.0",
      "next@<14.2.24": ">=14.2.24",
      "path-to-regexp@<0.1.12": ">=0.1.12",
      "next@>=13.0 <14.2.30": ">=14.2.30",
      "prismjs@<1.30.0": ">=1.30.0",
      "vite@<7.2.2": ">=7.2.2",
      "axios@<0.30.2": ">=0.30.2",
      "tar-fs@<3.1.1": ">=3.1.1",
      "dompurify": ">=3.2.3",
      "fast-redact": ">=3.5.0",
      "playwright": ">=1.56.1",
      "undici": ">=7.10.0",
      "js-yaml": ">=4.1.1",
      "tmp": ">=0.2.4"
    }
  },
  "dependencies": {
    "framer-motion": "^12.23.12"
  }
}
